<h2 class="title">Sign Up</h2>
<form action="/signup" method="POST">
  <label for="username-input">Username</label>
  <input id="username-input" type="text" name="username" placeholder="Username">
  <br>

  <label for="email-input">Email</label>
  <input id="email-input" type="email" name="email" placeholder="Email address">
  <br>

  <label for="password-input">Password</label>
  <input id="password-input" type="password" name="password" placeholder="********">
  <br>

  <button type="submit">Sign Up</button>

  {{!-- error message will be added here --}}
  {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
  {{/if}}
</form>